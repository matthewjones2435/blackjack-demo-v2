<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context=".controller.MainActivity"
  tools:showIn="@layout/activity_main">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/horizontal_guidline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.6"/>

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/vertical_guidline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5"/>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/hand_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:padding="@dimen/card_list_padding"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/vertical_guidline"
    app:layout_constraintBottom_toTopOf="@id/horizontal_guidline"/>

  <TextView
    android:id="@+id/hand_value"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:includeFontPadding="false"
    app:autoSizeTextType="uniform"
    app:autoSizeMinTextSize="@dimen/min_hand_count_size"
    app:autoSizeMaxTextSize="@dimen/max_hand_count_size"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toLeftOf="@id/vertical_guidline"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/horizontal_guidline"/>

</androidx.constraintlayout.widget.ConstraintLayout>